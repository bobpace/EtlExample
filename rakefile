require 'albacore'

task :default => [:xunit]

task :xunit do
  testAssemblies = FileList["src/**/*.Tests.dll"].exclude(/obj\//)
  testAssemblies.each do |testAssembly|
    xunit :xunit do |xunit|
      xunit.command = "tools/xunit/xunit.console.clr4.exe"
      xunit.assembly = testAssembly
      xunit.skip_test_fail = true
    end
  end
end
